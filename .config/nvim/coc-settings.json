{
  "coc.preferences.formatOnType": true,
  "javascript.suggest.autoImports": true,
  "typescript.suggest.autoImports": true,
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "extensions.updateCheck": "daily",
  "git.enableGutters": false,
  "git.blameUseRealTime": true,
  "git.addGBlameToVirtualText": true,
  "callHierarchy.enableTooltip": true,
  "coc.preferences.jumpCommand": "tabnew",
  "explorer.file.showHiddenFiles": true,
  "languageserver": {
    "rubocop": {
      "command": "rubocop",
      "args": ["--lsp"],
      "filetypes": ["ruby"],
      "rootPatterns": [".git", "Gemfile"],
      "requireRootPattern": true
    },
    "ruby-lsp": {
      "command": "ruby-lsp",
      "initializationOptions": {
        "formatter": "auto"
      },
      "filetypes": ["ruby"]
    },
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": ["terraform", "tf"],
      "initializationOptions": {},
      "settings": {}
    }
  },
  "snippets.ultisnips.pythonPrompt": false,
  "floatFactory.floatConfig": {
    "border": true,
    "rounded": true
  },
  "Lua.diagnostics.globals": ["vim", "use"]
}
